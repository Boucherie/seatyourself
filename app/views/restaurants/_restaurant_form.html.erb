<%= form_for restaurant do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :capacity %>
    <%= f.text_field :capacity %>
  </p>

  <p>
    <%= f.label :open_time %>
    <%= f.time_select :open_time, :ignore_date => true %>
  </p>

  <p>
    <%= f.label :close_time %>
    <%= f.time_select :close_time, :ignore_date => true %>
  </p>

  <p>
    <%= f.label :price_range %>
    <%= f.text_field :price_range %>
  </p>

  <p>
    <%= f.label :neighbourhood %>
    <%= f.text_field :neighbourhood %>
  </p>

  <p>
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
