<div class="restaurant">
  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>

  Address: <%= restaurant.address %><br>
  <%= link_to image_tag(restaurant.url, class: "restaurant"), restaurant_path(restaurant) %><br>
  Capacity      : <%= restaurant.capacity %> Persons<br>
  Open from     : <%= restaurant.open_time %> to <%= restaurant.close_time %><br>
  Price Range   : <%= restaurant.price_range %><br>
  Neighbourhood : <%= restaurant.neighbourhood %><br>
  Summary       : <%= restaurant.summary %>

  <%= link_to 'Make a Reservation', new_reservation_path %>

  <h1>---------------------------------------------------------------</h1>
</div>
